server {
        listen 80;
        server_name _;


        location ^ ~ /uploads/* {
                root /home/box/web/uploads;
        }

        location ~ *\.[\w]+$ {
                root /home/box/web/public;
        }
        location ~ [\w]+ {
		error_page 404 /404.html
        }

        error_page 404 /404.html;
        error_page 500 502 503 504 /50x.html;

        location = /50x.html {
                root /usr/share/nginx/html;
        }

}
